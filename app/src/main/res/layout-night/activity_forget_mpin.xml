<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgetMPIN">

    <TextView
        android:id="@+id/resetOTPHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/productsansbold"
        android:text="Enter the OTP"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp" />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/otpHolderReset"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/resetOTPHolder"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_marginStart="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="8dp">

        <EditText
            android:id="@+id/userOTP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/productsans"
            android:hint="@string/enter_otp"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:textAlignment="center"
            tools:ignore="SpeakableTextPresentCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/resetMPIN"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/otpHolderReset"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/productsansbold"
        android:text="@string/reset"
        android:textColor="@color/white" />


</RelativeLayout>